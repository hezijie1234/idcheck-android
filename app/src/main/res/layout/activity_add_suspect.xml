    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/camera_image"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:src="@mipmap/head_test"
                android:layout_marginRight="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="模板图一"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:textColor="#c3c3c3"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/idcard_image"
            android:layout_marginTop="30dp"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="30dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/head_test"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="模板图二"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:textColor="#c3c3c3"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/add_suspect_edittext5"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/zz_black"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="姓名:"/>
        <EditText
            android:id="@+id/name_edit"
            android:layout_width="match_parent"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:maxLength="20"
            android:background="@drawable/add_suspect_editbg"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textCursorDrawable="@null"
            android:textColor="@color/zz_black"
            android:layout_marginRight="50dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/zz_black"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="身份证:"/>
        <EditText
            android:id="@+id/idCard_edit"
            android:layout_width="match_parent"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:background="@drawable/add_suspect_editbg"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:maxLength="18"
            android:textCursorDrawable="@null"
            android:textColor="@color/zz_black"
            android:layout_marginRight="50dp"
            />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/spinner_linear"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/add_suspect_spinnbg"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/spinner"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                >

            </Spinner>

        </LinearLayout>
            <ImageView
                android:id="@+id/spinner_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="55dp"
                android:layout_gravity="right|center_vertical"
                android:src="@mipmap/addsuspect_1"/>
        </FrameLayout>


    </LinearLayout>
        <TextView
            android:id="@+id/send"
            android:layout_gravity=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingBottom="10dp"
            android:paddingTop="10dp"
