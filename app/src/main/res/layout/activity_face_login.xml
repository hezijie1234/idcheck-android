<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zz_white"
    android:orientation="vertical"
    tools:context="com.huiyu.tech.zhongxing.ui.activity.FaceLoginActivity">

    <include layout="@layout/title_bar"/>

    <org.opencv.android.JavaCameraView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="visible"
        android:id="@+id/face_login_surface_view"
        opencv:show_fps="false"
        opencv:camera_id="any"
        />
    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/face_login_user_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/zz_white"
        android:padding="6dp"
        >
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/jz_07"
            android:scaleType="centerCrop"
            android:id="@+id/face_login_image"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/face_login_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="警员："
                android:textSize="14sp"
                android:textColor="@color/text_dark"/>

            <TextView
                android:id="@+id/face_login_id_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="警号："
                android:textSize="14sp"
                android:textColor="@color/text_dark"/>

            <TextView
                android:enabled="false"
                android:id="@+id/face_login_confirm"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center"
                android:background="@drawable/btn_login_selector"
                android:text="@string/btn_login"
                android:layout_gravity="right"
                android:layout_marginTop="32dp"
                android:textColor="@color/zz_white"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
