<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zz_white"
    android:orientation="vertical"
    tools:context="com.huiyu.tech.zhongxing.ui.activity.HistoryWarningsActivity">

    <include layout="@layout/title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E4E4E4"
        android:orientation="horizontal">

        <com.huiyu.tech.zhongxing.widget.ClearEditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:drawableLeft="@mipmap/zte_33"
            android:drawablePadding="4dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="@string/text_hint_search"
            android:lines="1"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:textColor="@color/text_3"
            android:textColorHint="@color/text_9"
            android:textSize="14sp"
            android:background="@drawable/bg_search"/>
    </LinearLayout>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/lv_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:scrollbars="none"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"></com.handmark.pulltorefresh.library.PullToRefreshListView>
</LinearLayout>
