<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/zz_white"
    tools:context="com.huiyu.tech.zhongxing.ui.fragment.NoticeFragment">

   <!-- <include layout="@layout/title_bar" />-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E4E4E4"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >
        <EditText
            android:id="@+id/start_time"
            android:layout_marginLeft="10dp"
            android:layout_width="105dp"
            android:layout_height="25dp"
            android:textCursorDrawable="@null"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_history_warn1"
            />
        <TextView
            android:id="@+id/line"
            android:layout_toRightOf="@id/start_time"
            android:layout_centerVertical="true"
            style="@style/Line"
            />
        <EditText
            android:id="@+id/end_time"
            android:layout_toRightOf="@id/line"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="105dp"
            android:layout_height="25dp"
            android:textCursorDrawable="@null"
            android:background="@drawable/shape_history_warn1"
            />
        <Button
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:background="@drawable/add_suspect_text_bg"
            android:text="检索"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/zz_black"
            />
    </RelativeLayout>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/lv_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:scrollbars="none"
        android:divider="@color/gray_light_line"
        android:dividerHeight="1dp"></com.handmark.pulltorefresh.library.PullToRefreshListView>
</LinearLayout>
