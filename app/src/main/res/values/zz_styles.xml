<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--activity样式-->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!--Action bar color-->
        <item name="colorPrimary">@color/zz_colorPrimary</item>
        <!--Status bar color-->
        <item name="colorPrimaryDark">@color/zz_white</item>
        <!--Window color-->
        <item name="android:windowBackground">@color/zz_bg_window</item>
        <!--各控制元件(如：check box、switch 或是 radio) 被勾选 (checked) 或是选定 (selected) 的颜色-->
        <item name="colorAccent">@color/zz_colorAccent</item>

        <!--基础控件样式-->
    </style>

    <style name="zzDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>


</resources>