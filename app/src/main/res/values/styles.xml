<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="AppBaseTheme" />

    <!-- 无标题栏 -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/push_top_in</item>
        <item name="android:windowExitAnimation">@anim/push_top_out</item>
    </style>

    <style name="rb_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/tab_text_color_selector</item>
        <item name="android:textSize">12sp</item>
    </style>


    <!--idcard的样式-->

    <style name="CardInfoTitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#0096d0</item>
    </style>

    <style name="CardInfoText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CardInfoRed">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ff0000</item>
    </style>

    <style name="StatusLabel">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="VersionStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="Line">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#5794bf</item>
    </style>
    <style name="ThemeDialog" parent="android:Theme.Material.Light.Dialog" type="text/css" tools:targetApi="lollipop">
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item></style>

    <style name="My_CheckBox" parent="@android:style/Widget.Material.CompoundButton.CheckBox" tools:targetApi="lollipop">
        <item name="android:colorControlActivated">@color/colorPrimaryDark</item>
        <item name="android:colorControlNormal">@color/colorPrimary</item>
    </style>
</resources>

